

import java.io.BufferedReader;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

public class FileMergeSort {

	public static void main(String[] args) {
		BufferedReader br1 = null;
		BufferedReader br2 = null;
		try {
			br1 = new BufferedReader(
					new FileReader("C:\\Users\\IET\\eclipse dsa wrokspace\\SortingDSA\\src\\MergedSort\\file1"));
			br2 = new BufferedReader(
					new FileReader("C:\\Users\\IET\\eclipse dsa wrokspace\\SortingDSA\\src\\MergedSort\\file2"));
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		List<Integer> arr3 = new ArrayList<>();

		mergeSortAscending(br1, br2, arr3);

		System.out.print("After Sorting Array : ");
		System.out.println("arr1 : " + arr3);
	}

	public static void mergeSortAscending(BufferedReader br1, BufferedReader br2, List arr3) {
		try {
			String file1 = br1.readLine();

			String file2 = br2.readLine();
			while (file1 != null && file2 != null) {

				int f1 = Integer.parseInt(file1);
				int f2 = Integer.parseInt(file2);
				if (f1 < f2) {
					arr3.add(f1);
					file1 = br1.readLine();
				} else {
					arr3.add(f2);
					file2 = br2.readLine();
				}
			}
			while (file1 != null) {
				int f1 = Integer.parseInt(file1);
				arr3.add(f1);
				file1 = br1.readLine();
			}
			while (file2 != null) {
				int f2 = Integer.parseInt(file2);
				arr3.add(f2);
				file2 = br2.readLine();
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

}


