package com.demo.service;

import java.util.Arrays;
import java.util.Scanner;

public class SortClass {

	public static void bubbleSort(int[] arr) {
		int ch;
		do {
			System.out.println("1.Bubble Sort Ascending \n2.Bubble Sort Descending \n3.Exit ");
			System.out.println("Enter choice");
			int n = arr.length;
			Scanner sc = new Scanner(System.in);
			ch = sc.nextInt();

			switch (ch) {
			case 1:
				// i for iterate
				for (int i = 0; i < n; i++) {
					// j for swapp
					//System.out.println("!!!!!");
					for (int j = 0; j < n - i - 1; j++) {
						if (arr[j] > arr[j + 1]) {
							//System.out.println("@@@@");
							int temp = arr[j];
							arr[j] = arr[j + 1];
							arr[j + 1] = temp;
						}
					}
				}
				System.out.println(Arrays.toString(arr));
				break;
			case 2:

				// i for iterate
				for (int i = 0; i < n; i++) {
					// j for swapp
					for (int j = 0; j < n - i - 1; j++) {
						if (arr[j] < arr[j + 1]) {
							int temp = arr[j];
							arr[j] = arr[j + 1];
							arr[j + 1] = temp;
						}
					}
				}
				System.out.println(Arrays.toString(arr));
				break;
			case 3:
				System.out.println("Exited");
				sc.close();
				//System.out.println(Arrays.toString(arr));
				break;
			default:
				System.out.println("Enter correct choice");
			}
		} while (ch != 3);

	}

}
